<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".CustomizeActivity">

    <!-- Hero image -->
    <ImageView
        android:id="@+id/ivHero"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_costomize"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back button (white circle) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="44dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@mipmap/ic_back_foreground"
            android:contentDescription="@string/back" />

    </com.google.android.material.card.MaterialCardView>

    <!-- White sheet with rounded top corners (seperti gambar) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSheet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-34dp"
        app:cardCornerRadius="28dp"
        app:cardUseCompatPadding="false"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivHero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Catatan: MaterialCardView radius akan mem-bulatkan semua sudut.
             Untuk meniru gambar (hanya atas yang bulat), kita pakai background drawable. -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollCustomize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_sheet_top_rounded"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="22dp"
                android:paddingBottom="24dp">

                <!-- Title row: [Custom] Search Recipes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCustomChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_custom_label"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="@string/custom"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/search_recipes"
                        android:textColor="@color/trofes_text"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/customize_desc"
                    android:textColor="#6E6E6E"
                    android:textSize="14sp" />

                <!-- Calories -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/calories"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etCalories"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/calories_hint"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/unit_kcal"
                        android:textColor="#666666"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Protein -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/protein"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etProtein"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/protein_hint"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/unit_gr"
                        android:textColor="#666666"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Fat -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/fat"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etFat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/fat_hint"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/unit_gr"
                        android:textColor="#666666"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- NEW: Karbohidrat (seperti screenshot) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/carbs"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etCarbs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/carbs_hint"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/unit_mg"
                        android:textColor="#666666"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Sodium (unit di screenshot = gr) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/sodium"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etSodium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/sodium_hint"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/unit_gr"
                        android:textColor="#666666"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Select Allergies -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/select_allergies"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/containerAllergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/etAllergy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/type_allergy"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipsAllergies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp" />

                    <TextView
                        android:id="@+id/tvRemoveAllAllergies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/remove_all"
                        android:textColor="#E53935"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Select Dietary Preferences -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/select_dietary_preferences"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/containerPreferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/etPreferences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/type_dietary_preference"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipsPreferences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp" />

                    <TextView
                        android:id="@+id/tvRemoveAllPreferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/remove_all"
                        android:textColor="#E53935"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Select Ingredients -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/select_ingredients"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- NEW: Ingredients from DB (autocomplete + chips) -->
                <LinearLayout
                    android:id="@+id/containerIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/etIngredientsAuto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/type_ingredients"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipsIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp" />

                    <TextView
                        android:id="@+id/tvRemoveAllIngredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/remove_all"
                        android:textColor="#E53935"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Existing: Ingredients free text + camera OCR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_border"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etIngredients"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@null"
                        android:hint="@string/type_ingredients"
                        android:textSize="12sp"
                        android:inputType="text"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCamera"
                        android:layout_width="86dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/trofes_green"
                        android:gravity="center"
                        android:padding="0dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:text=""
                        app:icon="@drawable/ic_camera"
                        app:iconTint="@android:color/white"
                        app:iconSize="22dp"
                        app:iconGravity="textTop"
                        app:iconPadding="0dp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <!-- Bottom actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearchRecipes"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/trofes_green"
                        android:minHeight="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/search_recipes"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:cornerRadius="14dp" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/white"
                        android:minHeight="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/reset"
                        android:textAllCaps="false"
                        android:textColor="@color/trofes_text"
                        android:textStyle="bold"
                        app:cornerRadius="14dp"
                        app:strokeColor="#DDDDDD"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

    <!-- Button to open CameraActivity -->
