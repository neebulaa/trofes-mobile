<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".CameraActivity">

    <!-- Camera Preview (full screen) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back button (white circle) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnBack"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src="@mipmap/ic_back_foreground"
            android:contentDescription="@string/back" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Scan frame (4 corners) -->

    <!-- Bottom Bar -->
    <ImageView
        android:id="@+id/ivFrame"
        android:layout_width="227dp"
        android:layout_height="245dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="170dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/bg_camera_frame_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Upload (left) - white circle like screenshot -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnUpload"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:src="@drawable/ic_gallery"
                android:contentDescription="@string/upload"
                app:tint="@android:color/black" />

        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Capture (center) -->
        <ImageButton
            android:id="@+id/btnCapture"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@drawable/bg_capture_button"
            android:contentDescription="@string/capture" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Flash (right) - same style as screenshot -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnFlash"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:src="@drawable/ic_flash"
                android:contentDescription="@string/flash" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
