<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@null"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnBack"
                android:layout_marginStart="12dp"
                android:text="Edit Info"
                android:textColor="@color/trofes_text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Trofes.Circle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Name"
                    android:textColor="@color/trofes_text"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvBioPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="@color/trofes_muted"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Full Name"
            android:textColor="@color/trofes_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:autofillHints="name"
            android:background="@drawable/bg_input_border"
            android:hint="Masukan Username..."
            android:inputType="textPersonName"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="@color/trofes_text"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Username"
            android:textColor="@color/trofes_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:autofillHints="username"
            android:background="@drawable/bg_input_border"
            android:hint="Masukan Username..."
            android:inputType="text"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="@color/trofes_text"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Jenis Kelamin"
            android:textColor="@color/trofes_text"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/ddGender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_border"
            android:hint="Jenis Kelamin"
            android:inputType="none"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawablePadding="10dp"
            android:textColor="@color/trofes_text"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Bio"
            android:textColor="@color/trofes_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/bg_input_border"
            android:hint="Masukan Username..."
            android:inputType="text"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="@color/trofes_text"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Email"
            android:textColor="@color/trofes_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/bg_input_border"
            android:hint="Masukan email..."
            android:inputType="textEmailAddress"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="@color/trofes_text"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="No Hp"
            android:textColor="@color/trofes_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <EditText
                android:id="@+id/etCountryCode"
                android:layout_width="78dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_border"
                android:enabled="false"
                android:autofillHints=""
                android:inputType="text"
                android:text="+62"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/trofes_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:autofillHints="phone"
                android:background="@drawable/bg_input_border"
                android:hint="000-0000-0000"
                android:inputType="phone"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/trofes_text"
                android:textColorHint="#9B9B9B"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Ulang Tahun"
            android:textColor="@color/trofes_text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBirthDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_border"
            android:focusable="false"
            android:autofillHints="birthDate"
            android:inputType="date"
            android:hint="Select date"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="10dp"
            android:textColor="@color/trofes_text"
            android:textColorHint="#9B9B9B"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Save Profile"
                android:backgroundTint="@color/trofes_green"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Cancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
