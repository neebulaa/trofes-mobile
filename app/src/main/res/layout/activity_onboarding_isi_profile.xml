<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fullscreen background image -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_onboarding_profile_foreground"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll container for the form -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- White rounded card that holds the form -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="60dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="24dp">


                    <!-- Title & subtitle -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/onboarding_title"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="@string/onboarding_subtitle"
                        android:textColor="#888888"
                        android:textSize="13sp" />

                    <!-- Form fields container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="vertical">

                        <!-- Full Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/label_full_name"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/etFullName"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:autofillHints="name"
                            android:background="@drawable/bg_input_border"
                            android:hint="@string/hint_full_name"
                            android:inputType="textPersonName"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp" />

                        <!-- Phone -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="6dp"
                            android:text="@string/label_phone"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <!-- Tampilan seperti contoh: kotak kode negara + kotak nomor HP -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvCountryCode"
                                android:layout_width="72dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_input_border"
                                android:clickable="true"
                                android:contentDescription="@null"
                                android:focusable="true"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="@string/phone_prefix"
                                android:textColor="#333333"
                                android:textStyle="bold" />

                            <!-- pemisah kecil agar tampak dua kotak terpisah -->
                            <View
                                android:layout_width="10dp"
                                android:layout_height="match_parent" />

                            <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:autofillHints="phone"
                                android:background="@drawable/bg_input_border"
                                android:hint="@string/hint_phone"
                                android:inputType="phone"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Gender -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="6dp"
                            android:text="@string/label_gender"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_input_border">

                            <Spinner
                                android:id="@+id/spGender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:prompt="@string/prompt_gender" />
                        </RelativeLayout>

                        <!-- Birthdate -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="6dp"
                            android:text="@string/label_birthdate"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/etBirthDate"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:autofillHints="birthDate"
                            android:background="@drawable/bg_input_border"
                            android:clickable="true"
                            android:focusable="false"
                            android:hint="@string/hint_birthdate"
                            android:inputType="date"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp" />

                        <!-- Lanjut button -->
                        <Button
                            android:id="@+id/btnNext"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="18dp"
                            android:backgroundTint="@color/trofes_green"
                            android:text="@string/onboarding_mobile_continue"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Lewati button -->
                        <Button
                            android:id="@+id/btnSkip"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="1dp"
                            android:backgroundTint="@color/white"
                            android:text="@string/onboarding_mobile_skip"
                            android:textAllCaps="false"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@null"
                            app:strokeColor="#DDDDDD"
                            app:strokeWidth="1dp"/>

                        <!-- Footer link -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Floating circular logo overlapping the top of the card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoCard"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:translationY="40dp"
                app:cardCornerRadius="44dp"
                app:cardElevation="12dp"
                app:layout_constraintBottom_toTopOf="@id/cardProfile"
                app:layout_constraintEnd_toEndOf="@id/cardProfile"
                app:layout_constraintStart_toStartOf="@id/cardProfile">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:padding="1dp"
                    android:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
