<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image (nanti kamu ganti sendiri) -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_onboarding_profile_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Card container centered -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAllergies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginVertical="24dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingTop="64dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Ada alergi makanan?"
                        android:textColor="#1A1A1A"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="Tentukan makanan yang paling Anda hindari"
                        android:textColor="#7B7B7B"
                        android:textSize="13sp" />

                    <!-- 3x3 grid manual layout (nanti teks+gambar kamu ganti) -->
                    <LinearLayout
                        android:id="@+id/gridAllergies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="vertical">

                        <!-- Row 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/tile1"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_diary_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Dairy"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tile2"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_egg_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Egg"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tile3"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_fish_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Fish"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Row 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/tile4"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_shellfish_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Shellfish"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tile5"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_soy_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Soy"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tile6"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_sesame_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Sesame"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Row 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/tile7"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_wheat_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Wheat"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tile8"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_peanut_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Peanut"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tile9"
                                android:layout_width="0dp"
                                android:layout_height="110dp"
                                android:layout_margin="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_preference_tile_ripple"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@null"
                                    android:src="@mipmap/ic_tree_nut_foreground" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Tree Nut"
                                    android:textColor="#333333"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnContinue"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="18dp"
                        android:backgroundTint="@color/trofes_green"
                        android:text="Continue"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnSkip"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/white"
                        android:text="@string/onboarding_mobile_skip"
                        android:textAllCaps="false"
                        android:textColor="#1A1A1A"
                        android:textSize="16sp"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@null"
                        app:strokeColor="#DDDDDD"
                        app:strokeWidth="1dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Floating logo (icon nanti kamu ganti) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoCard"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:translationY="40dp"
                app:cardCornerRadius="48dp"
                app:cardElevation="14dp"
                app:layout_constraintBottom_toTopOf="@id/cardAllergies"
                app:layout_constraintEnd_toEndOf="@id/cardAllergies"
                app:layout_constraintStart_toStartOf="@id/cardAllergies">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>

