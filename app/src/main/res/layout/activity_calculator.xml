<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".CalculatorActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="64dp"
            android:paddingBottom="24dp">

            <!-- Header: crown + title -->
            <ImageView
                android:id="@+id/ivCrown"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_crown"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTitleLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Nutrients"
                android:textColor="@color/trofes_text"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCrown" />

            <TextView
                android:id="@+id/tvTitleRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_green_rect"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Calculator"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/tvTitleLeft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCrown" />

            <!-- Body Parameter -->
            <TextView
                android:id="@+id/tvBodyParam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Body Parameter"
                android:textColor="@color/trofes_text"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvTitleLeft"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvBodyDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Input your Gender, Age, Weight, Height"
                android:textColor="#777777"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvBodyParam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Gender buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMale"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="18dp"
                android:text="Male"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/trofes_green"
                app:layout_constraintTop_toBottomOf="@id/tvBodyDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnFemale" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFemale"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="18dp"
                android:text="Female"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/trofes_grey_200"
                app:layout_constraintTop_toBottomOf="@id/tvBodyDesc"
                app:layout_constraintStart_toEndOf="@id/btnMale"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Input: Age -->
            <EditText
                android:id="@+id/etAge"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_input_border"
                android:hint="Age (years)"
                android:inputType="number"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/trofes_text"
                android:textColorHint="#9B9B9B"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/btnMale"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Input: Weight + unit -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/weightRow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/etAge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_border"
                    android:hint="Weight (kg)"
                    android:inputType="numberDecimal"
                    android:paddingStart="14dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/trofes_text"
                    android:textColorHint="#9B9B9B"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvWeightUnit"
                    android:layout_width="80dp"
                    android:layout_height="56dp"
                    android:background="#222222"
                    android:gravity="center"
                    android:text="kg"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:cornerRadius="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Input: Height + unit -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/heightRow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/weightRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_input_border"
                    android:hint="Height (cm)"
                    android:inputType="numberDecimal"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/trofes_text"
                    android:textColorHint="#9B9B9B"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvHeightUnit"
                    android:layout_width="80dp"
                    android:layout_height="56dp"
                    android:background="#222222"
                    android:gravity="center"
                    android:text="cm"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Activity slider (custom like screenshot) -->
            <SeekBar
                android:id="@+id/sbActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:progressDrawable="@drawable/seekbar_activity"
                android:thumb="@drawable/seekbar_thumb_activity"
                android:splitTrack="false"
                app:layout_constraintTop_toBottomOf="@id/heightRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/activityLabels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/sbActivity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvActivityLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Low"
                        android:textColor="@color/trofes_text"
                        android:textSize="10sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvActivityMiddle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Middle"
                        android:textColor="@color/trofes_text"
                        android:textSize="10sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvActivityHigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="High"
                        android:textColor="@color/trofes_text"
                        android:textSize="10sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvActivityVeryHigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Very High"
                        android:textColor="@color/trofes_text"
                        android:textSize="10sp" />
                </FrameLayout>

            </LinearLayout>

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalculate"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="22dp"
                android:text="Calculate"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/trofes_green"
                app:cornerRadius="14dp"
                app:layout_constraintTop_toBottomOf="@id/activityLabels"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnReset" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="22dp"
                android:text="Reset"
                android:textAllCaps="false"
                android:textColor="@color/trofes_text"
                android:textStyle="bold"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="14dp"
                app:strokeColor="#BDBDBD"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/activityLabels"
                app:layout_constraintStart_toEndOf="@id/btnCalculate"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvHintFillAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Please fill all inputs"
                android:textColor="#E53935"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btnCalculate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom nav (same as other pages) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivCurvedBackground"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:contentDescription="@null"
            android:elevation="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_curved_nav"
            android:translationZ="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:elevation="0dp"
            android:paddingTop="0dp"
            android:translationZ="0dp"
            app:itemHorizontalTranslationEnabled="false"
            app:itemIconSize="24dp"
            app:itemIconTint="@color/bottom_nav_item_tint"
            app:itemTextColor="@color/bottom_nav_item_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="@id/ivCurvedBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivCurvedBackground"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCenter"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/logo_desc"
        android:elevation="20dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_main_foreground"
        android:translationZ="20dp"
        app:backgroundTint="@color/trofes_green"
        app:borderWidth="0dp"
        app:maxImageSize="30dp"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
