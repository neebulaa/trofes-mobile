<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. BACKGROUND IMAGE (Menggunakan ImageView agar bisa centerCrop) -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_regris"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. SCROLL VIEW (Konten Form) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Card Background -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="60dp"
                    android:paddingBottom="32dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Trofes"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Buat akun anda dan temukan duia penuh nutrisi"
                        android:textColor="@color/trofes_muted"
                        android:textSize="14sp" />

                    <!-- Form Inputs -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical">

                        <!-- Username -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Username"
                            android:textColor="@color/trofes_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etUsername"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_input_border"
                            android:hint="Masukan Username..."
                            android:paddingHorizontal="16dp"
                            android:textColor="@color/trofes_text"
                            android:textSize="14sp" />

                        <!-- Email -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="6dp"
                            android:text="Email"
                            android:textColor="@color/trofes_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_input_border"
                            android:hint="Masukan Email..."
                            android:inputType="textEmailAddress"
                            android:paddingHorizontal="16dp"
                            android:textColor="@color/trofes_text"
                            android:textSize="14sp" />

                        <!-- Password -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="6dp"
                            android:text="Password"
                            android:textColor="@color/trofes_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_input_border"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:paddingHorizontal="16dp"
                                android:textColor="@color/trofes_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/ivTogglePassword"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_eye_off"
                                android:contentDescription="Toggle password visibility"
                                android:clickable="true"
                                android:focusable="true" />
                        </FrameLayout>

                        <!-- Confirm Password -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="6dp"
                            android:text="Confirmation Password"
                            android:textColor="@color/trofes_text"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_input_border"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:paddingHorizontal="16dp"
                                android:textColor="@color/trofes_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/ivToggleConfirm"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_eye_off"
                                android:contentDescription="Toggle confirm password visibility"
                                android:clickable="true"
                                android:focusable="true" />
                        </FrameLayout>

                        <!-- Remember Me -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/trofes_green"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:scaleX="1.1"
                                android:scaleY="1.1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="Ingat saya 30 hari kedepan"
                                android:textColor="@color/trofes_text"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Buttons -->
                        <Button
                            android:id="@+id/btnSignup"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/trofes_green"
                            android:text="Sign Up"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="Sign In with Google"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:cornerRadius="8dp"
                            app:icon="@drawable/ic_google"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconTint="@null"
                            app:strokeColor="#DDDDDD"
                            app:strokeWidth="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sudah mempunyai akun? "
                                android:textColor="@color/trofes_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvLoginLink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign In"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="4dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Floating Logo -->
            <androidx.cardview.widget.CardView
                android:layout_width="88dp"
                android:layout_height="88dp"
                app:cardCornerRadius="44dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toTopOf="@id/cardSignup"
                app:layout_constraintEnd_toEndOf="@id/cardSignup"
                app:layout_constraintStart_toStartOf="@id/cardSignup"
                app:layout_constraintTop_toTopOf="@id/cardSignup">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>