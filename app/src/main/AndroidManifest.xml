<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trofes">

        <activity
            android:name=".SigninActivity"
            android:exported="false" />

        <activity
            android:name=".OnboardingAllergiesActivity"
            android:exported="false" />

        <activity
            android:name=".OnboardingMobileActivity"
            android:exported="false" />

        <activity
            android:name=".Onboarding_Isi_Profile"
            android:exported="false" />

        <!-- MainActivity sebagai halaman awal (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Mendaftarkan activity lainnya (yang memang ada class-nya) -->
        <activity android:name=".HomeActivity" />
        <activity android:name=".RecipesActivity" />
        <activity android:name=".GuideActivity" />
        <activity android:name=".CustomizeActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".ContactUsActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".RecipeDetailActivity" />
        <activity android:name=".RecipeDetailComposeActivity" />

    </application>

</manifest>